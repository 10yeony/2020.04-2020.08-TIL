package practice;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=0; i<n; i++) {
			for(int j=0; j<i; j++) {
				System.out.printf(" ");
			}
			for(int j=2*(n-i)-1; j>0; j--) {
				System.out.printf("*");
			}
			for(int j=1; j<i; j++) {
				System.out.printf(" ");
			}
			System.out.println();
		}
		for(int i=0; i<n-1; i++) {
			for(int j=n-2; j>i; j--) {
				System.out.printf(" ");
			}
			for(int j=0; j<2*(i+2)-1; j++) {
				System.out.printf("*");
			}
			for(int j=n-2; j>i; j--) {
				System.out.printf(" ");
			}
			System.out.println();
		}
	}
}