<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(function(){
	//1. 폼에 입력된 값을 다 가지고 ACTION에 연결된 페이지로 이동, 전송...하는 함수
	$('#frm').submit(function(){
		//alert('submit...');

		//2. id, password 입력된 값을 각각의 변수에 할당... id, pass...
		//alert 창으로 값 확인... 폼 초기화, 포커스
		var id = $('#id').val();
		var pass = $('#pass').val();
		//alert(id+pass);
		$('#id').val("").focus();
		$('#pass').val("");
		
		//submit 이벤트 작동 안하도록..
		//return false; //이거 써도 됨.
		//event.preventDefault(); //기본으로 동작하는 이벤트를 막을 때 쓴다.
		
		//3. checkbox에서 취미를 하나도 선택하지 않으면... aelrt
		//하나 이상 선택하면... alert
		//내가 체크했다 안했다 표시하는 폼이 두개 => checkbox & radip
		if($('input[name=hobby]:checked').length==0){
			alert("하나는 선택...")
		}else{
			//each...array
			var arr = $('input[name=hobby]:checked');
			var str='';
			/* arr.each(function(){
				str += $(this).val();
			}); */
			/*$.each(arr, function(index, item){
				str += item.value + " ";
			});*/
			$.each(arr, function(index){
				str += arr[index].value + " ";
			});
			alert("당신이 선택한 취미는 "+str);
		}//else
	});//submit
	
	//4. select 폼에서 선택한 번호가 resultView 영역에 뿌려지도록...
	$('#hp').change(function(){
		$('#resultView').html('<font color=red>'+$(this).val()+'</font>');
	});
});
</script>
</head>
