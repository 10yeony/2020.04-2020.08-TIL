package practice;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int total = (n-1)*2+1;
		for(int i=0; i<total; i++) {
			for(int j=1; j<=i; i++) {
				System.out.println(" ");
			}
			for(int j=2*n-1; j>0; j-=2) {
				System.out.printf("*");
			}
			for(int j=1; j<=i; i++) {
				System.out.println(" ");
			}
			System.out.println();
		}
	}
}