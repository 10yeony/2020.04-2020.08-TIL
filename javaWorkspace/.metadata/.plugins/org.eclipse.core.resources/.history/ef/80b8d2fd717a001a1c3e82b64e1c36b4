package workshop;

import java.util.Scanner;

class RockPaperScissors {
	public String game(int userNum) {
		// String[] arr = { "가위", "바위", "보" };
		int com = (int) (Math.random() * 3) + 1;
		if (userNum == com) {
			return "비겼습니다!!!";
		} else if (userNum == 1 && com == 3) {
			return "이겼습니다!!!";
		} else if (userNum == 2 && com == 1) {
			return "이겼습니다!!!";
		} else if (userNum == 3 && com == 2) {
			return "이겼습니다!!!";
		} else {
			return "졌습니다!!!";
		}
	}
}

public class Workshop2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("가위바위보 게임을 시작합니다. 아래 보기 중 하나를 고르세요.");
		System.out.println("1. 5판 3승");
		System.out.println("2. 3판 2승");
		System.out.println("3. 1판 1승");
		int choice = sc.nextInt();
		int n = 0;
		if (choice == 1) {
			do {
				int userNum = 0;
				System.out.println("가위바위보 하나 중 입력: ");
				String user = sc.next();
				if (user == "가위") userNum = 1;
				else if (user == "바위") userNum = 2;
				else if (user == "보") userNum = 3;
				RockPaperScissors roc = new RockPaperScissors();
				String result = roc.game(userNum);
				System.out.println(result);
				n++;
			} while (n < 5);
		}
	}
}
