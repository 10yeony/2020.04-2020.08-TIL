package workshop;

import java.util.Scanner;

class RockPaperScissors {
	public String game(String user, String com) {  
		if(user == com) {
			return "비겼습니다!!!";
		}
		else if(user == "가위" && com == "보") {
			return "이겼습니다!!!";
		}
		else if(user == "바위" && com == "가위") {
			return "이겼습니다!!!";
		}
		else if(user == "보" && com == "바위") {
			return "이겼습니다!!!";
		}
		else {
			return "졌습니다!!!";
		}
	}
}

