package workshop;

import java.util.Scanner;

class RockPaperScissors {
	public String game(user, com) {  
		if(user == com) {
			return "비겼습니다!!!";
		}
		else if(user == 1 && com == 3) {
			return "이겼습니다!!!";
		}
		else if(user == 2 && com == 1) {
			return "이겼습니다!!!";
		}
		else if(user == 3 && com == 2) {
			return "이겼습니다!!!";
		}
		else {
			return "졌습니다!!!";
		}
	}
}

