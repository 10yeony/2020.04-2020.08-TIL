package algorithm;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int[][] tri = new int[n][n]; //입력값을 받는 배열
		int[][] sum = new int[n][n]; //
		for(int i=0; i<n; i++) {
			for(int j=0; j<=i; j++) {
				tri[i][j] = sc.nextInt();
			}
		}
		
		sum[0][0] = tri[0][0];
		
		for(int i=1; i<n; i++) {
			for(int j=1; j<=i; j++) {
				sum[i][j] = Math.max(sum[i-1][j-1], sum[i-1][j]) + tri[i][j];
			}
		}
		
		/* n-1행의 최댓값을 구함 */
		int max = sum[n-1][0];
		for(int j=0; j<n; j++) {
			if(sum[n-1][j] > max) {
				max = sum[n-1][j];
			}
		}
		System.out.println(max);
	}

}
