package com.encore.rest.controller;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.encore.rest.domain.Person;

@RestController
@RequestMapping("/sample")
public class SimpleController {
	
	// http://127.0.0.1:8888/rest/sample/hello
	@GetMapping("/hello")
	public String sayHello() {
		return "Hello Restful Service!!!";
	}
	
	@GetMapping("greet") // / 빼고 적어도 됨
	public Person sayGreet() {
		Person vo = new Person("홍길동","으랴차차");
		return vo;
	}
	
	/*
	출력결과)
	[{"name":"동이, 0","message":"으랴차차, 0"},{"name":"동이, 1","message":"으랴차차, 1"},{"name":"동이, 2","message":"으랴차차, 2"}]
	 */
	@GetMapping("/allGreet")
	public List<Person> allGreet() {
		List<Person> list = new ArrayList<Person>();
		for(int i=0; i<3; i++) {
			Person vo = new Person();
			vo.setName("동이, "+i);
			vo.setMessage("으랴차차, "+i);
			list.add(vo);
		}
		return list;
	}
	
	/*
	출력결과) {"1":{"name":"홍길동","message":"으랴차차"}}
	*/
	//성공여부, 상태값 등 여러가지 정보를 넣으려면 Map 형태로 넣는 게 좋음.
	//잘 짜여진 Map을 만들어서 그 안에 객체를 담아서 연결함.
	@GetMapping("/sendGreet")
	public Map<Integer, Person> sendGreet(){
		Map<Integer, Person> map = new HashMap<Integer, Person>();
		map.put(1,  new Person("홍길동", "으랴차차"));
		return map;
	}
}
