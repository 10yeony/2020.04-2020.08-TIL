package algorithm;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[][] tri = new int[n][n];
		int[][] sum = new int[n][n];
		for(int i=0; i<n; i++) {
			for(int j=0; j<=i; j++) {
				tri[i][j] = sc.nextInt();
			}
		}
		
		for(int i=1; i<n; i++) {
			for(int j=0; j<=i; j++) {
				sum[i][j] = Math.max(sum[i-1][j-1], sum[i-1][j]) + tri[i][j];
			}
		}
		
		int max = sum[n][0];
		for(int j=0; j<n; j++) {
			if(sum[n][j] > max) {
				max = sum[n][j];
			}
		}
		System.out.println(max);
	}

}
